                                        <span class="badge custom-badge comments-badge ml-2">
                                            <i class="fa fa-comment text-white"></i>
                                            <%= post.commentCount %>
                                        </span>

                                        <!-- Tags Badges -->
                                        <div class="ml-2">
                                            <% if (post.tags && post.tags.length> 0) { %>
                                                <% post.tags.forEach(tag=> { %>
                                                    <% let badgeClass='custom-badge' ; %>
                                                        <% if (tag==='Important' ) { %>
                                                            <% badgeClass +=' red' ; %>
                                                                <% } else if (tag==='New' ) { %>
                                                                    <% badgeClass +=' green' ; %>
                                                                        <% } else if (tag==='Update' ) { %>
                                                                            <% badgeClass +=' yellow' ; %>
                                                                                <% } else if (tag==='Feature' ) { %>
                                                                                    <% badgeClass +=' purple' ; %>
                                                                                        <% } else if (tag==='Trending' )
                                                                                            { %>
                                                                                            <% badgeClass +=' orange' ;
                                                                                                %>
                                                                                                <% } else if
