                                    <h6><a href="#"><%= comment.user.name %></a> <small><i><%= new Date(comment.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></i></small></h6>
                                    <p><%= comment.content %></p>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                    <!-- Comment List End -->
                
                    <!-- Comment Form Start -->
