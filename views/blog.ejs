                <div class="col-lg-8">
                    <!-- News Detail Start -->
                    <div class="position-relative mb-3" style="position: relative; margin-bottom: 1rem;">
                        <!-- Post Image -->
                        <img src="<%= post.picture %>" style="width: 100%; height: auto; object-fit: cover;">
                
                        <!-- Post Details Below the Image -->
                        <div style="background-color: white; padding: 1rem; border-radius: 0.25rem; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
                            <!-- User Info, Likes, Comments, Category, and Tags in the Same Line -->
                            <div style="display: flex; align-items: center; flex-wrap: wrap; margin-bottom: 1rem;">
                                <!-- User Info -->
                                <img src="<%= post.author.picture %>" style="border-radius: 50%; width: 40px; height: 40px; object-fit: cover; margin-right: 0.5rem;">
                                <span style="color: #333; margin-right: 1rem;"><%= post.author.name %></span>
                
                                <!-- Likes Badge -->
                                <span style="background-color: #dc3545; color: white; border-radius: 0.25rem; padding: 0.25rem 0.5rem; display: flex; align-items: center; margin-right: 0.5rem;">
                                    <i class="fa fa-heart" style="margin-right: 0.25rem;"></i><%= post.likeCount %>
                                </span>
                
                                <!-- Comments Badge -->
                                <span style="background-color: #17a2b8; color: white; border-radius: 0.25rem; padding: 0.25rem 0.5rem; display: flex; align-items: center; margin-right: 0.5rem;">
                                    <i class="fa fa-comment" style="margin-right: 0.25rem;"></i><%= post.commentCount %>
                                </span>
                
                                <!-- Tags Badges with Icons -->
                                <% if (post.tags && post.tags.length > 0) { %>
                                    <% post.tags.forEach(tag => { %>
                                        <% 
                                        let badgeColor = '#ffc107'; // Default Yellow
                                        let icon = 'fa-tag'; // Default Icon
                                        if (tag === 'Important') { 
                                            badgeColor = '#dc3545'; // Red
                                            icon = 'fa-exclamation'; 
                                        } else if (tag === 'New') { 
                                            badgeColor = '#28a745'; // Green
                                            icon = 'fa-star'; 
                                        } else if (tag === 'Update') { 
                                            badgeColor = '#ffc107'; // Yellow
                                            icon = 'fa-arrow-up'; 
                                        } else if (tag === 'Feature') { 
                                            badgeColor = '#007bff'; // Blue
                                            icon = 'fa-star'; 
                                        } else if (tag === 'Trending') { 
                                            badgeColor = '#fd7e14'; // Orange
                                            icon = 'fa-chart-line'; 
                                        } else if (tag === 'Warning') { 
                                            badgeColor = '#ffc107'; // Yellow
                                            icon = 'fa-exclamation-triangle'; 
                                        }
                                        %>
                                        <span style="background-color:#17a2b8; color: white; border-radius: 0.25rem; padding: 0.2rem 0.4rem; font-size: 0.75rem; margin-right: 0.5rem; display: flex; align-items: center;">
                                            <i class="fa <%= icon %>" style="margin-right: 0.25rem; font-size: 0.75rem;"></i><%= tag %>
                                        </span>
                                    <% }) %>
                                <% } %>
                                    
                                <form id="like-form" action="/post/<%= post._id %>/like" method="POST" style="margin-left: auto;">
                                    <button type="submit" id="like-btn" style="background-color: #f8f9fa; color: #333; border-radius: 0.25rem; padding: 0.25rem 0.5rem; display: flex; align-items: center; cursor: pointer; border: none;">
                                        <i class="fa fa-sign-language" aria-hidden="true" style="margin-right: 0.25rem;"></i> Clap
                                    </button>
                                </form>
                                <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
                                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
                                    
                                <script>
                                document.getElementById('like-form').addEventListener('submit', function(event) {
                                    event.preventDefault(); // Prevent form from submitting normally
                                    
                                    const form = event.target;
                                
                                    fetch(form.action, {
                                        method: 'POST',
                                        headers: {
                                            'Content-Type': 'application/x-www-form-urlencoded',
                                            'X-Requested-With': 'XMLHttpRequest'
                                        },
                                        body: new URLSearchParams(new FormData(form)).toString()
                                    })
                                    .then(response => response.json())
                                    .then(data => {
                                        if (data.success) {
                                            toastr.success(data.message); // Show success notification
                                        } else {
                                            toastr.warning(data.message); // Show warning notification
                                        }
                                    })
                                    .catch(error => {
                                        toastr.error('An error occurred'); // Show error notification
                                    });
                                });
                                </script>
                                
                                
                            </div>
                
                            <!-- Post Title -->
                            <h2 style="color: #333; margin-bottom: 1rem;">
